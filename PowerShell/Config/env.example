# AX Monitor Configuration - Example
# Copy this file to .env.DEV, .env.TST, or .env.PRD and configure for your environment

# ============================================
# AX Database (READ-ONLY)
# ============================================
AX_DB_SERVER=your-ax-server
AX_DB_NAME=AX2012R3_PROD
AX_DB_USER=
AX_DB_PASSWORD=
AX_DB_DRIVER=ODBC Driver 17 for SQL Server
AX_DB_READ_ONLY=true

# ============================================
# Staging Database (READ/WRITE)
# ============================================
STAGING_DB_SERVER=your-staging-server
STAGING_DB_NAME=AXMonitor_Staging
STAGING_DB_USER=
STAGING_DB_PASSWORD=
STAGING_DB_DRIVER=ODBC Driver 17 for SQL Server

# ============================================
# Monitoring Settings
# ============================================
MONITORING_INTERVAL=5
RETENTION_DAYS=90
BATCH_SIZE=1000

# Thresholds
THRESHOLD_CPU=80
THRESHOLD_MEMORY=85
THRESHOLD_DISK=90
THRESHOLD_BLOCKING=30
THRESHOLD_DEADLOCK=1

# ============================================
# Alert Settings - Email
# ============================================
ALERT_EMAIL_ENABLED=true
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587
SMTP_USER=alerts@yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=AX Monitor <alerts@yourdomain.com>
SMTP_USE_SSL=true
ALERT_RECIPIENTS=ops-team@yourdomain.com,admin@yourdomain.com

# ============================================
# Alert Settings - Microsoft Teams
# ============================================
ALERT_TEAMS_ENABLED=false
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url

# ============================================
# Alert Settings - Slack
# ============================================
ALERT_SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url

# ============================================
# OpenAI / AI Settings
# ============================================
OPENAI_ENABLED=false
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# AI Features
AI_ANOMALY_DETECTION=true
AI_PREDICTIVE=true
AI_CHAT=true
AI_AUTO_REMEDIATION=false

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_PATH=./Logs
LOG_MAX_SIZE_MB=100
LOG_MAX_FILES=10

# ============================================
# Security
# ============================================
SECRET_KEY=your-secret-key-change-this
JWT_SECRET=your-jwt-secret-change-this
SESSION_TIMEOUT=60
ENABLE_AUTH=false
