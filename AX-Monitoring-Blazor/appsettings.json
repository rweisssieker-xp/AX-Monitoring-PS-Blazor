{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AXDatabase": "Server=${DB_SERVER};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};Driver={${DB_DRIVER}};Connection Timeout=30;",
    "StagingDatabase": "Server=${STAGING_DB_SERVER};Database=${STAGING_DB_NAME};User Id=${STAGING_DB_USER};Password=${STAGING_DB_PASSWORD};Driver={${DB_DRIVER}};"
  },
  "AppSettings": {
    "Title": "AX Monitoring BU",
    "Version": "1.0.0",
    "Debug": false,
    "LogLevel": "INFO",
    "Monitoring": {
      "CheckIntervalMinutes": 5,
      "RetentionDays": 90,
      "BatchSize": 1000,
      "Thresholds": {
        "CPUPercent": 80,
        "MemoryPercent": 85,
        "DiskPercent": 90,
        "BlockingDurationSeconds": 30,
        "DeadlockCount": 1
      }
    },
    "Alerts": {
      "Email": {
        "Enabled": true,
        "SMTPServer": "${SMTP_SERVER}",
        "SMTPPort": "${SMTP_PORT}",
        "SMTPUser": "${SMTP_USER}",
        "SMTPPassword": "${SMTP_PASSWORD}",
        "FromAddress": "${EMAIL_FROM}"
      },
      "Teams": {
        "Enabled": true,
        "WebhookUrl": "${TEAMS_WEBHOOK_URL}"
      },
      "Rules": [
        {
          "Name": "High CPU Usage",
          "Condition": "cpu_percent > 80",
          "Severity": "warning"
        },
        {
          "Name": "Memory Critical",
          "Condition": "memory_percent > 90",
          "Severity": "critical"
        },
        {
          "Name": "Blocking Detected",
          "Condition": "blocking_duration > 60",
          "Severity": "warning"
        }
      ]
    },
    "ML": {
      "ModelPath": "./models/",
      "AnomalyThreshold": 0.8,
      "PredictionHorizonHours": 24,
      "RetrainIntervalHours": 168,
      "Features": [
        "cpu_percent",
        "memory_percent",
        "disk_percent",
        "active_sessions",
        "blocking_sessions"
      ]
    },
    "Security": {
      "SecretKey": "${SECRET_KEY}",
      "JwtSecret": "${JWT_SECRET}",
      "SessionTimeoutMinutes": 60
    },
    "UI": {
      "Theme": {
        "PrimaryColor": "#1f77b4",
        "BackgroundColor": "#ffffff",
        "SecondaryBackgroundColor": "#f0f2f6",
        "TextColor": "#262730"
      },
      "Dashboard": {
        "RefreshIntervalSeconds": 30,
        "MaxDataPoints": 1000
      },
      "Charts": {
        "DefaultHeight": 400,
        "AnimationDuration": 500
      }
    }
  }
}