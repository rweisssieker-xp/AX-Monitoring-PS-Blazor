@page "/blocking"
@using AXMonitoringBU.Blazor.Services
@using AXMonitoringBU.Blazor.Components
@inject IBlockingService BlockingService
@inject IDeadlockService DeadlockService
@inject IMetricsService MetricsService

<PageTitle>Blocking - AX Monitoring BU</PageTitle>

<h3>üîí Blocking & Deadlocks Monitor</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="RefreshData">üîÑ Refresh Data</button>
</div>

@if (isLoading)
{
    <p>Loading...</p>
}
else
{
    <div class="row mb-4">
        <div class="col-md-3">
            <MetricCard Title="Total Blocking" Value="@totalBlocking.ToString()" Color="#1f77b4" Delta="@($"+{totalBlocking}")" />
        </div>
        <div class="col-md-3">
            <MetricCard Title="Locks" Value="@lockBlocking.ToString()" Color="#dc3545" Delta="@($"+{lockBlocking}")" />
        </div>
        <div class="col-md-3">
            <MetricCard Title="Deadlocks" Value="@deadlockBlocking.ToString()" Color="#ffc107" Delta="@($"+{deadlockBlocking}")" />
        </div>
        <div class="col-md-3">
            <MetricCard Title="Extended Events Deadlocks" Value="@extendedEventsDeadlockCount.ToString()" Color="#fd7e14" Delta="@($"+{extendedEventsDeadlockCount}")" />
        </div>
        <div class="col-md-3">
            <MetricCard Title="Avg Duration (sec)" Value="@avgDuration.ToString("F1")" Color="#17a2b8" />
        </div>
    </div>

    @if (criticalBlocking.Any())
    {
        <div class="alert alert-danger mb-4">
            <h5>üö® Critical Blocking Detected</h5>
            <ul class="mb-0">
                @foreach (var blocking in criticalBlocking)
                {
                    <li>Session @blocking.BlockingSessionId is blocking @blocking.BlockedSessionId for @blocking.DurationSeconds seconds</li>
                }
            </ul>
        </div>
    }
    else if (blockingChains == null || !blockingChains.Any())
    {
        <div class="alert alert-success mb-4">‚úÖ No blocking chains detected</div>
    }

    @if (blockingChains != null && blockingChains.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <h4>üìã Blocking Chains Details</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Blocking Session</th>
                                <th>Blocked Session</th>
                                <th>Type</th>
                                <th>Resource</th>
                                <th>Duration (sec)</th>
                                <th>SQL Text</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var chain in blockingChains)
                            {
                                <tr>
                                    <td>@chain.BlockingSessionId</td>
                                    <td>@chain.BlockedSessionId</td>
                                    <td><StatusBadge Status="@chain.BlockingType" Text="@chain.BlockingType" /></td>
                                    <td>@chain.Resource</td>
                                    <td>@chain.DurationSeconds</td>
                                    <td>
                                        <small>@(chain.SqlText?.Length > 50 ? chain.SqlText.Substring(0, 50) + "..." : chain.SqlText ?? "N/A")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <h4>üîç SQL Details</h4>
                @foreach (var chain in blockingChains)
                {
                    <div class="card mb-3">
                        <div class="card-header">
                            Blocking Chain: @chain.BlockingSessionId ‚Üí @chain.BlockedSessionId
                        </div>
                        <div class="card-body">
                            <p><strong>Blocking Type:</strong> @chain.BlockingType</p>
                            <p><strong>Resource:</strong> @chain.Resource</p>
                            <p><strong>Duration:</strong> @chain.DurationSeconds seconds</p>
                            @if (!string.IsNullOrEmpty(chain.SqlText))
                            {
                                <p><strong>SQL Text:</strong></p>
                                <pre class="bg-light p-3"><code>@chain.SqlText</code></pre>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @if (extendedEventsDeadlocks != null && extendedEventsDeadlocks.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <h4>üíÄ Extended Events Deadlocks</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Timestamp</th>
                                <th>Victim Session</th>
                                <th>Processes</th>
                                <th>Resources</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var deadlock in extendedEventsDeadlocks)
                            {
                                <tr>
                                    <td>@deadlock.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td><span class="badge bg-danger">@deadlock.VictimSessionId</span></td>
                                    <td>@deadlock.process_count</td>
                                    <td>@deadlock.resource_count</td>
                                    <td>
                                        <button class="btn btn-sm btn-info" @onclick="() => ViewDeadlockDetails(deadlock.Id)">View Details</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (showDeadlockDetails && selectedDeadlock != null)
    {
        <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Deadlock Details - @selectedDeadlock.Id</h5>
                        <button type="button" class="btn-close" @onclick="CloseDeadlockDetails"></button>
                    </div>
                    <div class="modal-body">
                        <p><strong>Timestamp:</strong> @selectedDeadlock.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</p>
                        <p><strong>Victim Session:</strong> <span class="badge bg-danger">@selectedDeadlock.VictimSessionId</span></p>
                        
                        <h6>Processes:</h6>
                        @if (selectedDeadlock.processes != null && selectedDeadlock.processes.Any())
                        {
                            <ul>
                                @foreach (var process in selectedDeadlock.processes)
                                {
                                    <li>
                                        <strong>@(process.IsVictim ? "VICTIM " : "")</strong>
                                        Process ID: @process.ProcessId, Session: @process.SessionId, Database: @process.DatabaseName
                                        @if (!string.IsNullOrEmpty(process.SqlText))
                                        {
                                            <pre class="bg-light p-2 mt-2"><code>@process.SqlText</code></pre>
                                        }
                                    </li>
                                }
                            </ul>
                        }

                        <h6>Resources:</h6>
                        @if (selectedDeadlock.resources != null && selectedDeadlock.resources.Any())
                        {
                            <ul>
                                @foreach (var resource in selectedDeadlock.resources)
                                {
                                    <li>@resource.ResourceType: @resource.ObjectName @(string.IsNullOrEmpty(resource.IndexName) ? "" : $"({resource.IndexName})")</li>
                                }
                            </ul>
                        }

                        @if (!string.IsNullOrEmpty(selectedDeadlock.DeadlockXml))
                        {
                            <h6>Full XML:</h6>
                            <pre class="bg-light p-3" style="max-height: 400px; overflow-y: auto;"><code>@selectedDeadlock.DeadlockXml</code></pre>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDeadlockDetails">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private bool isLoading = true;
    private List<BlockingChainDto>? blockingChains;
    private List<DeadlockDto>? extendedEventsDeadlocks;
    private DeadlockDto? selectedDeadlock;
    private bool showDeadlockDetails = false;
    private int totalBlocking => blockingChains?.Count ?? 0;
    private int lockBlocking => blockingChains?.Count(b => b.BlockingType == "Lock") ?? 0;
    private int deadlockBlocking => blockingChains?.Count(b => b.BlockingType == "Deadlock") ?? 0;
    private int extendedEventsDeadlockCount => extendedEventsDeadlocks?.Count ?? 0;
    private double avgDuration => blockingChains?.Any() == true 
        ? blockingChains.Average(b => b.DurationSeconds) 
        : 0;
    private List<BlockingChainDto> criticalBlocking => blockingChains?
        .Where(b => b.DurationSeconds > 60)
        .ToList() ?? new List<BlockingChainDto>();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var response = await BlockingService.GetBlockingChainsAsync(true);
            blockingChains = response?.blocking_chains;

            var deadlockResponse = await DeadlockService.GetDeadlocksAsync(50);
            extendedEventsDeadlocks = deadlockResponse?.deadlocks;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading blocking chains: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private async Task ViewDeadlockDetails(string deadlockId)
    {
        try
        {
            var response = await DeadlockService.GetDeadlockByIdAsync(deadlockId);
            selectedDeadlock = response?.deadlock;
            showDeadlockDetails = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading deadlock details: {ex.Message}");
        }
    }

    private void CloseDeadlockDetails()
    {
        showDeadlockDetails = false;
        selectedDeadlock = null;
    }
}

