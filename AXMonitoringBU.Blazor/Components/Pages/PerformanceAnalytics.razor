@page "/performance-analytics"
@using AXMonitoringBU.Blazor.Services
@using AXMonitoringBU.Blazor.Models
@inject IPerformanceAnalyticsService PerformanceAnalyticsService

<PageTitle>Performance Analytics - AX Monitoring BU</PageTitle>

<h3>‚ö° Performance Analytics</h3>

<div class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <label>Start Date:</label>
            <input type="date" class="form-control" @bind="startDate" />
        </div>
        <div class="col-md-3">
            <label>End Date:</label>
            <input type="date" class="form-control" @bind="endDate" />
        </div>
        <div class="col-md-3">
            <label>Job Filter (optional):</label>
            <input type="text" class="form-control" @bind="jobFilter" placeholder="Enter job caption..." />
        </div>
        <div class="col-md-3">
            <label>&nbsp;</label>
            <button class="btn btn-primary d-block w-100" @onclick="RefreshData">üîÑ Refresh Data</button>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading performance analytics...</p>
    </div>
}
else
{
    <!-- Predictive Warnings -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning">
                    <h5>‚ö†Ô∏è Predictive Warnings</h5>
                </div>
                <div class="card-body">
                    @if (warnings != null && warnings.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Job Caption</th>
                                        <th>Warning Type</th>
                                        <th>Severity</th>
                                        <th>Message</th>
                                        <th>Predicted Impact</th>
                                        <th>Confidence</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var warning in warnings)
                                    {
                                        <tr class="@GetWarningRowClass(warning.Severity)">
                                            <td><strong>@warning.JobCaption</strong></td>
                                            <td>@warning.WarningType</td>
                                            <td><span class="badge @GetSeverityBadgeClass(warning.Severity)">@warning.Severity</span></td>
                                            <td>@warning.Message</td>
                                            <td>@warning.PredictedImpactDate.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar @GetConfidenceBarColor(warning.Confidence)"
                                                         role="progressbar"
                                                         style="width: @(warning.Confidence)%"
                                                         aria-valuenow="@warning.Confidence"
                                                         aria-valuemin="0"
                                                         aria-valuemax="100">
                                                        @warning.Confidence%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-success">‚úì No predictive warnings detected. System performance is stable.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Baseline Comparison -->
    @if (baselineComparison != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5>üìä Baseline Comparison</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h6>Overall Duration Change</h6>
                                        <h3 class="@GetDurationChangeClass(baselineComparison.OverallDurationChange)">
                                            @(baselineComparison.OverallDurationChange > 0 ? "+" : "")@baselineComparison.OverallDurationChange.ToString("F1")%
                                        </h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <h6>Slower Than Baseline</h6>
                                        <h3>@baselineComparison.JobsSlowerThanBaseline</h3>
                                        <small>jobs degraded</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h6>Faster Than Baseline</h6>
                                        <h3>@baselineComparison.JobsFasterThanBaseline</h3>
                                        <small>jobs improved</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (baselineComparison.JobComparisons.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-striped">
                                    <thead>
                                        <tr>
                                            <th>Job Caption</th>
                                            <th>Current Avg (sec)</th>
                                            <th>Baseline Avg (sec)</th>
                                            <th>Change</th>
                                            <th>Current Error Rate</th>
                                            <th>Baseline Error Rate</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var job in baselineComparison.JobComparisons.Take(15))
                                        {
                                            <tr>
                                                <td><strong>@job.JobCaption</strong></td>
                                                <td>@job.CurrentAvgDuration.ToString("F1")</td>
                                                <td>@job.BaselineAvgDuration.ToString("F1")</td>
                                                <td class="@GetDurationChangeClass(job.DurationPercentageChange)">
                                                    @(job.DurationPercentageChange > 0 ? "+" : "")@job.DurationPercentageChange.ToString("F1")%
                                                </td>
                                                <td>@job.CurrentErrorRate.ToString("F1")%</td>
                                                <td>@job.BaselineErrorRate.ToString("F1")%</td>
                                                <td><span class="badge @GetStatusBadgeClass(job.Status)">@job.Status</span></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            @if (baselineComparison.JobComparisons.Count > 15)
                            {
                                <p class="text-muted mt-2">Showing first 15 of @baselineComparison.JobComparisons.Count job comparisons</p>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No baseline comparison data available</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Slowest Operations -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5>üê¢ Slowest Operations (Top 20)</h5>
                </div>
                <div class="card-body">
                    @if (slowestOperations != null && slowestOperations.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Job Caption</th>
                                        <th>Duration</th>
                                        <th>Start Time</th>
                                        <th>End Time</th>
                                        <th>Server</th>
                                        <th>Company</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var (op, index) in slowestOperations.Select((op, index) => (op, index)))
                                    {
                                        var rank = index + 1;
                                        <tr>
                                            <td><strong>#@rank</strong></td>
                                            <td>@op.JobCaption</td>
                                            <td class="@GetDurationClass(op.DurationSeconds)">
                                                <strong>@FormatDuration(op.DurationSeconds)</strong>
                                            </td>
                                            <td>@op.StartDateTime.ToString("dd.MM HH:mm")</td>
                                            <td>@op.EndDateTime.ToString("dd.MM HH:mm")</td>
                                            <td>@op.ServerName</td>
                                            <td>@op.Company</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No slowest operations data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Job Duration Trends -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>üìà Job Duration Trends</h5>
                </div>
                <div class="card-body">
                    @if (durationTrends != null && durationTrends.Any())
                    {
                        <!-- Group by JobCaption to show each job's trend -->
                        var groupedTrends = durationTrends.GroupBy(t => t.JobCaption).Take(10);

                        @foreach (var jobGroup in groupedTrends)
                        {
                            <div class="mb-4">
                                <h6>üìù @jobGroup.Key</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Executions</th>
                                                <th>Avg Duration (min)</th>
                                                <th>Min (min)</th>
                                                <th>Max (min)</th>
                                                <th>Std Dev</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var trend in jobGroup.OrderByDescending(t => t.ExecutionDate).Take(7))
                                            {
                                                <tr>
                                                    <td>@trend.ExecutionDate.ToString("dd.MM.yyyy")</td>
                                                    <td>@trend.ExecutionCount</td>
                                                    <td><strong>@((trend.AvgDurationSeconds / 60).ToString("F1"))</strong></td>
                                                    <td>@((trend.MinDurationSeconds / 60).ToString("F1"))</td>
                                                    <td>@((trend.MaxDurationSeconds / 60).ToString("F1"))</td>
                                                    <td>@((trend.StdDevDurationSeconds / 60).ToString("F1"))</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }

                        @if (groupedTrends.Count() < durationTrends.GroupBy(t => t.JobCaption).Count())
                        {
                            <p class="text-muted">Showing first 10 jobs with trend data</p>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No duration trend data available</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private DateTime startDate = DateTime.Now.AddDays(-7);
    private DateTime endDate = DateTime.Now;
    private string jobFilter = "";

    private List<PredictiveWarningDto> warnings = new();
    private BaselineComparisonDto? baselineComparison;
    private List<SlowestOperationDto> slowestOperations = new();
    private List<JobDurationTrendDto> durationTrends = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            // Load all data in parallel
            var warningsTask = PerformanceAnalyticsService.GetPredictiveWarningsAsync();
            var baselineTask = PerformanceAnalyticsService.GetBaselineComparisonAsync(startDate, endDate);
            var slowestTask = PerformanceAnalyticsService.GetSlowestOperationsAsync(startDate, endDate, 20);
            var trendsTask = PerformanceAnalyticsService.GetJobDurationTrendsAsync(
                startDate,
                endDate,
                string.IsNullOrWhiteSpace(jobFilter) ? null : jobFilter);

            await Task.WhenAll(warningsTask, baselineTask, slowestTask, trendsTask);

            warnings = await warningsTask;
            baselineComparison = await baselineTask;
            slowestOperations = await slowestTask;
            durationTrends = await trendsTask;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading performance analytics: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private string GetSeverityBadgeClass(string severity) => severity switch
    {
        "High" => "bg-danger",
        "Medium" => "bg-warning",
        "Low" => "bg-info",
        _ => "bg-secondary"
    };

    private string GetWarningRowClass(string severity) => severity switch
    {
        "High" => "table-danger",
        "Medium" => "table-warning",
        _ => ""
    };

    private string GetConfidenceBarColor(int confidence) => confidence switch
    {
        >= 80 => "bg-success",
        >= 60 => "bg-info",
        >= 40 => "bg-warning",
        _ => "bg-danger"
    };

    private string GetDurationChangeClass(double change) => change switch
    {
        > 25 => "text-danger fw-bold",
        > 10 => "text-warning",
        < -10 => "text-success",
        _ => ""
    };

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Critical" => "bg-danger",
        "Warning" => "bg-warning",
        "Improved" => "bg-success",
        "Normal" => "bg-secondary",
        _ => "bg-secondary"
    };

    private string GetDurationClass(double durationSeconds)
    {
        var minutes = durationSeconds / 60;
        return minutes switch
        {
            > 60 => "text-danger fw-bold",
            > 30 => "text-warning",
            _ => ""
        };
    }

    private string FormatDuration(double seconds)
    {
        var minutes = seconds / 60;
        if (minutes < 60)
        {
            return $"{minutes:F1} min";
        }
        else
        {
            var hours = minutes / 60;
            return $"{hours:F1} hrs";
        }
    }
}
