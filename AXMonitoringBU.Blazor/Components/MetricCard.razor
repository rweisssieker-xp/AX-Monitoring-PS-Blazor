@namespace AXMonitoringBU.Blazor.Components

<div class="card mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h6 class="card-subtitle mb-2 text-muted">@Title</h6>
                <h2 class="card-title mb-0" style="color: @Color">@Value</h2>
                @if (!string.IsNullOrEmpty(Delta))
                {
                    <small class="text-muted">@Delta</small>
                }
            </div>
            @if (!string.IsNullOrEmpty(Icon))
            {
                <div class="display-4">@Icon</div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Value { get; set; } = string.Empty;
    [Parameter] public string? Delta { get; set; }
    [Parameter] public string Color { get; set; } = "#1f77b4";
    [Parameter] public string? Icon { get; set; }
}

