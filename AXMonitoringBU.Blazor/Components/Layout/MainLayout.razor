@inherits LayoutComponentBase
@using Microsoft.Extensions.Configuration
@using AXMonitoringBU.Blazor.Services
@inject IApiService ApiService
@inject IPreferencesService PreferencesService
@implements IAsyncDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="d-flex align-items-center justify-content-between w-100">
                <h4>AX Monitoring BU</h4>
                <div class="d-flex align-items-center gap-3">
                    @if (!string.IsNullOrEmpty(databaseInfo?.display_name))
                    {
                        <span class="badge bg-secondary" title="Überwachte Datenbank">
                            🖥️ @databaseInfo.display_name
                        </span>
                    }
                    @if (databaseInfo?.aos_servers != null && databaseInfo.aos_servers.Any())
                    {
                        <span class="badge bg-primary" title="AOS Server: @string.Join(", ", databaseInfo.aos_servers)">
                            🖥️ AOS: @string.Join(", ", databaseInfo.aos_servers)
                        </span>
                    }
                    <span class="badge bg-info">@Environment</span>
                    <small class="text-muted">Last updated: @DateTime.Now.ToString("HH:mm:ss")</small>
                </div>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
    
    <button class="theme-toggle" @onclick="ToggleTheme" title="Toggle Dark Mode">
        @if (isDarkMode)
        {
            <text>☀️</text>
        }
        else
        {
            <text>🌙</text>
        }
    </button>
</div>

@code {
    [Inject] private IConfiguration Configuration { get; set; } = null!;
    
    private DatabaseInfoResponse? databaseInfo;
    private bool isDarkMode = false;
    
    private string Environment => Configuration["App:Environment"] ?? 
                                  Configuration["ASPNETCORE_ENVIRONMENT"] ?? 
                                  "DEV";

    protected override async Task OnInitializedAsync()
    {
        await LoadDatabaseInfo();
        await LoadTheme();
    }

    private async Task LoadTheme()
    {
        try
        {
            var theme = await PreferencesService.GetThemeAsync();
            isDarkMode = theme == "dark";
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading theme: {ex.Message}");
        }
    }

    private async Task ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        var theme = isDarkMode ? "dark" : "light";
        await PreferencesService.SetThemeAsync(theme);
    }

    public async ValueTask DisposeAsync()
    {
        // Cleanup if needed
        await Task.CompletedTask;
    }

    private async Task LoadDatabaseInfo()
    {
        try
        {
            databaseInfo = await ApiService.GetAsync<DatabaseInfoResponse>("api/v1/database/info");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading database info: {ex.Message}");
        }
    }

    public class DatabaseInfoResponse
    {
        public string server { get; set; } = string.Empty;
        public string database { get; set; } = string.Empty;
        public string provider { get; set; } = string.Empty;
        public string display_name { get; set; } = string.Empty;
        public List<string>? aos_servers { get; set; }
        public string? default_aos { get; set; }
    }
}
