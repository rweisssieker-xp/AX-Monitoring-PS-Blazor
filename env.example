# AX Monitoring BU - Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env files to source control

# Database Configuration (AX Database)
AX_DB_SERVER=your_sql_server
AX_DB_NAME=your_database
AX_DB_USER=your_username
AX_DB_PASSWORD=your_password
AX_USE_WINDOWS_AUTH=false
DB_DRIVER=ODBC Driver 17 for SQL Server
DB_CONNECTION_STRING=Server=${AX_DB_SERVER};Database=${AX_DB_NAME};User Id=${AX_DB_USER};Password=${AX_DB_PASSWORD};TrustServerCertificate=true

# Monitoring Database (Local SQLite or SQL Server)
MONITORING_DB_CONNECTION_STRING=Data Source=axmonitoring.db
# For SQL Server: Server=localhost;Database=AXMonitoringBU;Integrated Security=true;TrustServerCertificate=true

# AOS Configuration
AOS_SERVER_1=AOS01
AOS_SERVER_2=AOS02

# Extended Events Deadlock Path (optional)
XE_DEADLOCK_PATH=C:\XE\deadlocks

# Email Configuration
EMAIL_ENABLED=true
SMTP_SERVER=smtp.yourcompany.com
SMTP_PORT=587
SMTP_USER=your_email@company.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=monitoring@yourcompany.com
SENDER_EMAIL=monitor@yourcompany.com
SENDER_PASSWORD=your_email_password
CRITICAL_EMAIL_RECIPIENTS=admin@yourcompany.com
WARNING_EMAIL_RECIPIENTS=ops@yourcompany.com
INFO_EMAIL_RECIPIENTS=monitor@yourcompany.com

# Teams Configuration
TEAMS_ENABLED=true
TEAMS_CRITICAL_WEBHOOK_URL=https://yourcompany.webhook.office.com/webhookb2/...
TEAMS_WARNING_WEBHOOK_URL=https://yourcompany.webhook.office.com/webhookb2/...
TEAMS_INFO_WEBHOOK_URL=https://yourcompany.webhook.office.com/webhookb2/...

# Application Settings
APP_TITLE=AX Monitoring BU
APP_VERSION=1.0.0
APP_ENVIRONMENT=Production

# Security (IMPORTANT: Change these in production!)
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production

# Monitoring Settings
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=85
ALERT_THRESHOLD_DISK=90
CHECK_INTERVAL_MINUTES=5

# ML Settings
ML_MODEL_PATH=./models/
ANOMALY_THRESHOLD=0.8
PREDICTION_HORIZON_HOURS=24

# OpenAI Configuration (for Batch Job Error Analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ANALYSIS_ENABLED=false

# Ticketing System Integration
TICKETING_SYSTEM=servicenow
# ServiceNow
SERVICENOW_URL=https://your-instance.service-now.com
SERVICENOW_USERNAME=your_username
SERVICENOW_PASSWORD=your_password
# Jira
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your_username
JIRA_API_TOKEN=your_api_token
JIRA_PROJECT_KEY=MON
# Azure DevOps
AZURE_DEVOPS_URL=https://dev.azure.com/your-org
AZURE_DEVOPS_PAT=your_personal_access_token
AZURE_DEVOPS_ORG=your-org
AZURE_DEVOPS_PROJECT=your-project

# CORS Configuration (for Production)
CORS_ALLOWED_ORIGIN_1=https://your-blazor-app-domain.com
CORS_ALLOWED_ORIGIN_2=https://your-api-domain.com

# Rate Limiting (optional)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
