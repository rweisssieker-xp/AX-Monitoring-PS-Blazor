# Database Configuration
DB_SERVER=your_sql_server
DB_NAME=your_database
DB_USER=your_username
DB_PASSWORD=your_password
DB_DRIVER=ODBC Driver 17 for SQL Server

# Use Windows Authentication for Database (set to "true" to use Windows Auth instead of SQL Auth)
USE_WINDOWS_AUTH=false

# AOS Configuration
AOS_SERVER_1=AOS01
AOS_SERVER_2=AOS02

# Extended Events Deadlock Path (optional)
XE_DEADLOCK_PATH=C:\XE\deadlocks

# Email Configuration
SMTP_SERVER=smtp.yourcompany.com
SMTP_PORT=587
SMTP_USER=your_email@company.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=monitoring@yourcompany.com

# Teams Configuration
TEAMS_WEBHOOK_URL=https://yourcompany.webhook.office.com/webhookb2/...

# Application Settings
APP_TITLE=AX Monitoring BU
APP_VERSION=1.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Monitoring Settings
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=85
ALERT_THRESHOLD_DISK=90
CHECK_INTERVAL_MINUTES=5

# ML Settings
ML_MODEL_PATH=./models/
ANOMALY_THRESHOLD=0.8
PREDICTION_HORIZON_HOURS=24

# OpenAI Configuration (for Batch Job Error Analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ANALYSIS_ENABLED=true

# API Settings removed - using Streamlit only
